<ruleset name="Nepada PHP 7.0 Conding Standard">
    <rule ref="./ruleset.xml">
        <exclude name="SlevomatCodingStandard.Classes.ClassConstantVisibility"/><!-- PHP >= 7.1 only -->
        <exclude name="SlevomatCodingStandard.TypeHints.NullableTypeForNullDefaultValue"/><!-- PHP >= 7.1 only -->
    </rule>

    <rule ref="SlevomatCodingStandard.TypeHints.TypeHintDeclaration">
        <properties>
            <property name="enableNullableTypeHints" value="false"/><!-- PHP >= 7.1 only -->
            <property name="enableVoidTypeHint" value="false"/><!-- PHP >= 7.1 only -->
        </properties>
    </rule>
</ruleset>

